---
// Página de registro - mantiene concepto de dos columnas
import Layout from "../../layouts/Layout.astro";
import RegisterForm from "../../components/registerform.astro";
import "../../styles/login.css";
---

<Layout title="Crear Cuenta - Strop">
  <div class="auth-page">
    <div class="auth-card">
      <section class="auth-left">
        <div class="brand"></div>
        <div>
          <h3 class="marketing">
            Únete a Strop y Gestiona tu Obra desde Cualquier Lugar
          </h3>
          <p class="lead">
            Regístrate para empezar a gestionar tus obras de construcción de
            manera eficiente.
          </p>
        </div>
      </section>

      <section class="auth-right">
        <h2>Crear una Cuenta</h2>
        <p class="sub">Regístrate para empezar a gestionar tus obras.</p>

        <RegisterForm />
      </section>
    </div>
  </div>
</Layout>
