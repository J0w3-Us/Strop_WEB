--
import DashboardLayout from "../../layouts/Layout.astro";
import Topbar from "../../components/dashbord/Topbar.astro";
import Sidebar from "../../components/dashbord/Sidebar.astro";
import "../../styles/dashbord.css";
import { getIncidents } from "../../service/incident.service";

const incidencias = await getIncidents();
---

<DashboardLayout title="Bitácora de Obra | Strop Enterprise">
  <div class="dashboard-layout bg-white min-h-screen font-sans text-slate-800">
    <Sidebar />

    <div class="main-content">
      <Topbar />

      <div class="content-area max-w-full mx-auto px-8 py-6">
        <!-- Header -->
        <div class="flex justify-between items-center mb-6 pb-6">
          <div>
            <h1 class="text-2xl font-bold text-slate-900">Bitácora de Obra</h1>
            <p class="text-sm text-slate-500 mt-1">
              Control centralizado de incidencias y solicitudes.
            </p>
          </div>
          <div class="flex gap-3">
            <button
              class="flex items-center gap-2 px-4 py-2 bg-white border-2 border-slate-400 rounded text-sm font-bold text-slate-700 hover:bg-slate-50 transition-colors"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                ></path></svg
              >
              Reporte
            </button>
            <button
              class="flex items-center gap-2 px-4 py-2 bg-white border-2 border-slate-400 rounded text-sm font-bold text-slate-700 hover:bg-slate-50 transition-colors"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 4v16m8-8H4"></path></svg
              >
              Incidencia
            </button>
          </div>
        </div>

        <!-- Filters -->
        <div class="mb-6 pb-6 border-b border-slate-300">
          <div class="flex gap-4 items-center">
            <div class="relative flex-1 max-w-xl">
              <span class="absolute left-3 top-3 text-slate-400">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg
                >
              </span>
              <input
                type="text"
                placeholder="Buscar por ID, Referencia o Autor..."
                class="w-full pl-10 pr-4 py-2 text-sm border-2 border-slate-300 rounded bg-white focus:outline-none focus:border-slate-500 transition-colors"
              />
            </div>
            <select
              class="text-sm border-2 border-slate-300 rounded py-2 px-3 bg-white text-slate-700 focus:outline-none focus:border-slate-500 font-medium"
            >
              <option>Todos los Tipos</option>
              <option>Materiales</option>
              <option>Seguridad</option>
            </select>
            <label
              class="flex items-center gap-2 text-sm text-slate-700 cursor-pointer font-medium"
            >
              <input
                type="checkbox"
                class="rounded border-slate-300 text-slate-600 focus:ring-0"
              />
              <span>Solo Pendientes</span>
            </label>
          </div>
        </div>

        <!-- Table -->
        <div
          class="border-2 border-slate-300 rounded-lg overflow-hidden bg-white"
        >
          <table class="w-full text-left">
            <thead>
              <tr class="bg-slate-50 border-b-2 border-slate-300">
                <th
                  class="px-4 py-4 text-xs font-bold text-slate-700 uppercase tracking-wider w-32 text-center"
                  >TIPO</th
                >
                <th
                  class="px-6 py-4 text-xs font-bold text-slate-700 uppercase tracking-wider flex-1"
                  >DESCRIPCIÓN TÉCNICA</th
                >
                <th
                  class="px-6 py-4 text-xs font-bold text-slate-700 uppercase tracking-wider w-40"
                  >RESPONSABLE</th
                >
                <th
                  class="px-6 py-4 text-xs font-bold text-slate-700 uppercase tracking-wider w-32"
                  >FECHA</th
                >
                <th
                  class="px-6 py-4 text-xs font-bold text-slate-700 uppercase tracking-wider w-28 text-center"
                  >ACCIONES</th
                >
              </tr>
            </thead>
            <tbody class="divide-y-2 divide-slate-300">
              {
                incidencias.map((inc) => (
                  <>
                    {/* Main Row */}
                    <tr class="hover:bg-slate-50 transition-colors">
                      {/* ICON CELL */}
                      <td class="px-4 py-6 align-top text-center">
                        <div
                          class={`w-20 h-20 mx-auto rounded-lg flex items-center justify-center border-2
                          ${inc.type === "safetyIncident" ? "bg-red-50 border-red-300 text-red-600" : ""}
                          ${inc.type === "materialRequest" ? "bg-teal-50 border-teal-300 text-teal-600" : ""}
                          ${inc.type === "progressReport" ? "bg-blue-50 border-blue-300 text-blue-600" : ""}
                          ${inc.type === "problem" ? "bg-amber-50 border-amber-300 text-amber-600" : ""}
                          ${inc.type === "consultation" ? "bg-purple-50 border-purple-300 text-purple-600" : ""}
                        `}
                        >
                          {inc.type === "materialRequest" && (
                            <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24" stroke="none">
                              <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                            </svg>
                          )}
                          {inc.type === "safetyIncident" && (
                            <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24" stroke="none">
                              <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 10.99h7c-.53 4.12-3.28 7.79-7 8.94V12H5V6.3l7-3.11v8.8z" />
                            </svg>
                          )}
                          {inc.type === "progressReport" && (
                            <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24" stroke="none">
                              <path d="M16 6l2.29 2.29-4.88 4.88-4-4L2 16.59 3.41 18l6-6 4 4 6.3-6.29L22 12V6z" />
                            </svg>
                          )}
                          {["problem", "consultation"].includes(inc.type) && (
                            <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24" stroke="none">
                              <path d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z" />
                            </svg>
                          )}
                        </div>
                      </td>

                      {/* DESCRIPTION CELL */}
                      <td class="px-6 py-6 align-top">
                        <div>
                          <h3 class="text-sm font-bold text-slate-900 mb-2">{inc.title}</h3>
                          
                          {inc.type === "materialRequest" && inc.materialDetails ? (
                            <div class="text-xs text-slate-700 leading-relaxed mb-2">
                              <div class="font-bold">
                                {inc.materialDetails.quantity} {inc.materialDetails.unit}
                                <span class="text-slate-600 font-normal"> | {inc.materialDetails.itemName}</span>
                              </div>
                              <div class="text-slate-600 mt-1">{inc.materialDetails.justification}</div>
                            </div>
                          ) : (
                            <p class="text-xs text-slate-700 leading-relaxed mb-2">{inc.description}</p>
                          )}

                          {/* Sub-info badges */}
                          <div class="flex gap-2 flex-wrap mt-3">
                            {inc.hasPhotos && (
                              <div class="flex items-center gap-1 text-[10px] font-bold text-blue-600 bg-blue-50 px-2 py-1 rounded border-2 border-blue-300">
                                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                                  <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" />
                                </svg>
                                EVIDENCIA ADJUNTA
                              </div>
                            )}
                            {inc.gpsLocation && (
                              <div class="flex items-center gap-1 text-[10px] font-bold text-slate-700 bg-slate-100 px-2 py-1 rounded border-2 border-slate-300">
                                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm0-13c-2.76 0-5 2.24-5 5s2.24 5 5 5 5-2.24 5-5-2.24-5-5-5z" />
                                </svg>
                                {inc.gpsLocation}
                              </div>
                            )}
                          </div>
                        </div>
                      </td>

                      {/* RESPONSIBLE CELL */}
                      <td class="px-6 py-6 align-top">
                        <div>
                          <div class="text-sm font-bold text-slate-900">
                            {inc.authorName.split(" ")[0]}. {inc.authorName.split(" ")[1] || ""}
                          </div>
                          <div class="text-[11px] font-bold text-slate-700 uppercase tracking-wider mt-1">
                            {inc.authorRole === "superintendent"
                              ? "SUPERINTENDENTE"
                              : inc.authorRole === "resident"
                                ? "RESIDENTE"
                                : inc.authorRole === "cabo"
                                  ? "CABO"
                                  : inc.authorRole.toUpperCase()}
                          </div>
                        </div>
                      </td>

                      {/* DATE CELL */}
                      <td class="px-6 py-6 align-top">
                        <div class="text-xs text-slate-700">
                          <div class="font-bold">
                            {new Date(inc.createdAt).toLocaleDateString("es-MX", {
                              year: "numeric",
                              month: "2-digit",
                              day: "2-digit",
                            })}
                          </div>
                          <div class="text-slate-600 mt-1">
                            {new Date(inc.createdAt).toLocaleTimeString("es-MX", {
                              hour: "2-digit",
                              minute: "2-digit",
                            })}{" "}
                            a.m.
                          </div>
                        </div>
                      </td>

                      {/* ACTIONS CELL */}
                      <td class="px-6 py-6 align-top text-center" id={`actions-${inc.id}`}>
                        {inc.type === "materialRequest" && inc.approvalStatus === "pending" ? (
                          <div class="flex justify-center">
                            <button
                              onclick={`window.handleApproval('${inc.id}', 'approved')`}
                              class="px-4 py-1.5 border-2 border-slate-400 hover:border-slate-600 text-slate-600 hover:text-slate-900 rounded text-xs font-bold transition-colors"
                            >
                              Aprobar
                            </button>
                          </div>
                        ) : (
                          <div class="flex justify-center">
                            <span
                              class={`px-3 py-1 rounded-full text-xs font-bold border-2
                              ${
                                inc.isCritical
                                  ? "bg-red-50 text-red-700 border-red-300"
                                  : inc.approvalStatus === "approved"
                                    ? "bg-emerald-50 text-emerald-700 border-emerald-300"
                                    : "bg-slate-100 text-slate-700 border-slate-300"
                              }
                            `}
                            >
                              {inc.isCritical
                                ? "Crítico"
                                : inc.approvalStatus === "approved"
                                  ? "Autorizado"
                                  : "Registrado"}
                            </span>
                          </div>
                        )}
                      </td>
                    </tr>
                  </>
                ))
              }
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="mt-6 flex justify-between items-center text-sm text-slate-600">
          <span>Mostrando <strong>{incidencias.length}</strong> registros</span>
          <div class="flex gap-2">
            <button class="px-4 py-2 border-2 border-slate-300 rounded hover:bg-slate-50 disabled:opacity-50 font-medium" disabled>Anterior</button>
            <button class="px-4 py-2 border-2 border-slate-300 rounded hover:bg-slate-50 font-medium">Siguiente</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>

<script type="module">
  import { updateIncidentStatus } from "../../service/incident.service";

  window.handleApproval = async (id, action) => {
    if (!confirm(action === "approved" ? "Confirmar autorización" : "Confirmar rechazo")) return;

    const cell = document.getElementById(`actions-${id}`);
    if (cell) cell.innerHTML = '<span class="text-xs text-slate-600 font-bold">Procesando...</span>';

    try {
      await updateIncidentStatus(id, action);
      if (cell) {
        const colorClass =
          action === "approved"
            ? "bg-emerald-50 text-emerald-700 border-emerald-300"
            : "bg-red-50 text-red-700 border-red-300";
        const label = action === "approved" ? "Autorizado" : "Rechazado";

        cell.innerHTML = `
          <div class="flex justify-center">
            <span class="px-3 py-1 rounded-full text-xs font-bold border-2 ${colorClass}">
              ${label}
            </span>
          </div>
        `;
      }
    } catch (e) {
      alert("Error de conexión con el servidor.");
      location.reload();
    }
  };
</script>
