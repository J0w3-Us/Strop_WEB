---
import DashboardLayout from "../../layouts/Layout.astro";
import Topbar from "../../components/dashbord/Topbar.astro";
import Sidebar from "../../components/dashbord/Sidebar.astro";
import "../../styles/dashbord.css";
import { getIncidents } from "../../service/incident.service";

const incidencias = await getIncidents();
---

<DashboardLayout title="Bitácora de Obra | Strop Enterprise">
  <div class="dashboard-layout bg-white min-h-screen font-sans text-slate-800">
    <Sidebar />

    <div class="main-content">
      <Topbar />

      <div class="content-area max-w-full mx-auto px-8 py-6">
        <div
          class="flex flex-col md:flex-row justify-between items-center mb-6 border-b border-slate-200 pb-6"
        >
          <div>
            <h1 class="text-xl font-bold text-slate-900">
              Control de Incidencias
            </h1>
            <p class="text-sm text-slate-500 mt-1">
              Gestión centralizada de reportes operativos.
            </p>
          </div>
          <div class="flex gap-3">
            <button
              class="flex items-center gap-2 px-4 py-2 bg-white border border-slate-300 rounded text-sm font-medium text-slate-700 hover:bg-slate-50 transition-colors"
            >
              <svg
                class="w-4 h-4 text-slate-500"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                ></path></svg
              >
              Exportar Reporte
            </button>
            <button
              class="flex items-center gap-2 px-4 py-2 bg-blue-700 hover:bg-blue-800 text-white rounded text-sm font-medium shadow-sm transition-colors"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 4v16m8-8H4"></path></svg
              >
              Registrar Incidencia
            </button>
          </div>
        </div>

        <div
          class="bg-slate-50 border border-slate-200 rounded-t-lg p-4 flex gap-4 items-center"
        >
          <div class="relative flex-1 max-w-md">
            <span class="absolute left-3 top-2.5 text-slate-400">
              <svg
                class="w-4 h-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg
              >
            </span>
            <input
              type="text"
              placeholder="Buscar por ID, Referencia o Autor..."
              class="w-full pl-9 pr-4 py-2 text-sm border border-slate-300 rounded bg-white focus:outline-none focus:border-blue-500 transition-colors"
            />
          </div>
          <div class="flex items-center gap-3 ml-auto">
            <select
              class="text-sm border-slate-300 rounded py-2 px-3 bg-white text-slate-700 focus:outline-none focus:border-blue-500"
            >
              <option>Todos los Tipos</option>
              <option>Materiales</option>
              <option>Seguridad</option>
            </select>
            <div class="h-6 w-px bg-slate-300"></div>
            <label
              class="flex items-center gap-2 text-sm text-slate-700 cursor-pointer"
            >
              <input
                type="checkbox"
                class="rounded border-slate-300 text-blue-700 focus:ring-0"
              />
              <span>Solo Pendientes</span>
            </label>
          </div>
        </div>

        <div
          class="border-x border-b border-slate-200 rounded-b-lg overflow-hidden bg-white shadow-sm"
        >
          <table class="w-full text-left border-collapse">
            <thead>
              <tr class="bg-slate-100 border-b border-slate-200">
                <th
                  class="px-6 py-3 text-xs font-bold text-slate-500 uppercase tracking-wider w-16 text-center"
                  >Tipo</th
                >
                <th
                  class="px-6 py-3 text-xs font-bold text-slate-500 uppercase tracking-wider w-1/3"
                  >Descripción Técnica</th
                >
                <th
                  class="px-6 py-3 text-xs font-bold text-slate-500 uppercase tracking-wider"
                  >Responsable</th
                >
                <th
                  class="px-6 py-3 text-xs font-bold text-slate-500 uppercase tracking-wider"
                  >Fecha</th
                >
                <th
                  class="px-6 py-3 text-xs font-bold text-slate-500 uppercase tracking-wider text-right"
                  >Acciones</th
                >
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
              {
                incidencias.map((inc) => (
                  <tr
                    class="group hover:bg-slate-50 transition-colors"
                    id={`row-${inc.id}`}
                  >
                    <td class="px-6 py-4 align-top">
                      <div
                        class={`w-9 h-9 mx-auto rounded flex items-center justify-center border
                      ${inc.type === "safetyIncident" ? "bg-red-50 border-red-100 text-red-600" : ""}
                      ${inc.type === "materialRequest" ? "bg-teal-50 border-teal-100 text-teal-600" : ""}
                      ${inc.type === "progressReport" ? "bg-blue-50 border-blue-100 text-blue-600" : ""}
                      ${inc.type === "problem" ? "bg-amber-50 border-amber-100 text-amber-600" : ""}
                      ${inc.type === "consultation" ? "bg-purple-50 border-purple-100 text-purple-600" : ""}
                    `}
                      >
                        {inc.type === "materialRequest" && (
                          <svg
                            class="w-5 h-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="1.5"
                              d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"
                            />
                          </svg>
                        )}
                        {inc.type === "safetyIncident" && (
                          <svg
                            class="w-5 h-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="1.5"
                              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                            />
                          </svg>
                        )}
                        {inc.type === "progressReport" && (
                          <svg
                            class="w-5 h-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="1.5"
                              d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                            />
                          </svg>
                        )}
                        {["problem", "consultation"].includes(inc.type) && (
                          <svg
                            class="w-5 h-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="1.5"
                              d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                            />
                          </svg>
                        )}
                      </div>
                    </td>

                    <td class="px-6 py-4 align-top">
                      <div>
                        <span class="block text-sm font-semibold text-slate-800">
                          {inc.title}
                        </span>

                        {inc.type === "materialRequest" &&
                        inc.materialDetails ? (
                          <div class="mt-2 text-xs bg-slate-50 border border-slate-200 rounded p-2 inline-block">
                            <div class="flex items-center gap-2 text-slate-600">
                              <span class="font-bold text-slate-800">
                                {inc.materialDetails.quantity}{" "}
                                {inc.materialDetails.unit}
                              </span>
                              <span>|</span>
                              <span class="uppercase tracking-wide">
                                {inc.materialDetails.itemName}
                              </span>
                            </div>
                          </div>
                        ) : (
                          <p class="text-xs text-slate-500 mt-1 line-clamp-2">
                            {inc.description}
                          </p>
                        )}

                        <div class="flex gap-3 mt-2">
                          {inc.hasPhotos && (
                            <span class="flex items-center gap-1 text-[10px] font-medium text-blue-600 uppercase tracking-wide">
                              <svg
                                class="w-3 h-3"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                              >
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"
                                />
                              </svg>
                              Evidencia Adjunta
                            </span>
                          )}
                          {inc.gpsLocation && (
                            <span class="flex items-center gap-1 text-[10px] font-medium text-slate-500 uppercase tracking-wide">
                              <svg
                                class="w-3 h-3"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                              >
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                />
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                />
                              </svg>
                              {inc.gpsLocation}
                            </span>
                          )}
                        </div>
                      </div>
                    </td>

                    <td class="px-6 py-4 align-top">
                      <div class="flex items-center gap-3">
                        <div class="w-8 h-8 bg-slate-200 rounded-full flex items-center justify-center text-xs font-bold text-slate-600">
                          {inc.authorName.charAt(0)}
                        </div>
                        <div>
                          <div class="text-sm font-medium text-slate-900">
                            {inc.authorName}
                          </div>
                          <div class="text-[10px] uppercase text-slate-500 font-bold tracking-wider">
                            {inc.authorRole === "superintendent"
                              ? "Superintendente"
                              : inc.authorRole}
                          </div>
                        </div>
                      </div>
                    </td>

                    <td class="px-6 py-4 align-top text-xs text-slate-500 tabular-nums">
                      {new Date(inc.createdAt).toLocaleDateString("es-MX", {
                        year: "numeric",
                        month: "2-digit",
                        day: "2-digit",
                      })}
                      <br />
                      <span class="text-slate-400">
                        {new Date(inc.createdAt).toLocaleTimeString("es-MX", {
                          hour: "2-digit",
                          minute: "2-digit",
                        })}
                      </span>
                    </td>

                    <td
                      class="px-6 py-4 align-middle text-right"
                      id={`actions-${inc.id}`}
                    >
                      {inc.type === "materialRequest" &&
                      inc.approvalStatus === "pending" ? (
                        <div class="flex justify-end gap-2">
                          <button
                            onclick={`window.handleApproval('${inc.id}', 'approved')`}
                            class="flex items-center gap-1 px-3 py-1.5 bg-white border border-slate-300 hover:border-emerald-500 hover:text-emerald-700 text-slate-600 rounded text-xs font-medium transition-colors shadow-sm"
                          >
                            <svg
                              class="w-3.5 h-3.5"
                              fill="none"
                              viewBox="0 0 24 24"
                              stroke="currentColor"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"
                              />
                            </svg>
                            Aprobar
                          </button>
                          <button
                            onclick={`window.handleApproval('${inc.id}', 'rejected')`}
                            class="p-1.5 bg-white border border-slate-300 hover:border-red-500 hover:text-red-700 text-slate-400 rounded transition-colors shadow-sm"
                            title="Rechazar"
                          >
                            <svg
                              class="w-3.5 h-3.5"
                              fill="none"
                              viewBox="0 0 24 24"
                              stroke="currentColor"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M6 18L18 6M6 6l12 12"
                              />
                            </svg>
                          </button>
                        </div>
                      ) : (
                        <div class="flex justify-end">
                          <span
                            class={`inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium border
                                ${
                                  inc.isCritical
                                    ? "bg-red-50 text-red-700 border-red-200"
                                    : inc.approvalStatus === "approved"
                                      ? "bg-emerald-50 text-emerald-700 border-emerald-200"
                                      : "bg-slate-100 text-slate-600 border-slate-200"
                                }
                            `}
                          >
                            <span
                              class={`w-1.5 h-1.5 rounded-full ${inc.isCritical ? "bg-red-600" : inc.approvalStatus === "approved" ? "bg-emerald-600" : "bg-slate-500"}`}
                            />
                            {inc.isCritical
                              ? "Crítico"
                              : inc.approvalStatus === "approved"
                                ? "Autorizado"
                                : "Registrado"}
                          </span>
                        </div>
                      )}
                    </td>
                  </tr>
                ))
              }
            </tbody>
          </table>
        </div>

        <div
          class="mt-4 flex justify-between items-center text-xs text-slate-500"
        >
          <span>Mostrando {incidencias.length} registros</span>
          <div class="flex gap-2">
            <button
              class="px-3 py-1 border border-slate-200 rounded hover:bg-slate-50 disabled:opacity-50"
              disabled>Anterior</button
            >
            <button
              class="px-3 py-1 border border-slate-200 rounded hover:bg-slate-50"
              >Siguiente</button
            >
          </div>
        </div>
      </div>
    </div>
  </div>

  <script type="module">
    import { updateIncidentStatus } from "../../service/incident.service";

    window.handleApproval = async (id, action) => {
      // Confirmación nativa (se puede mejorar con modal custom luego)
      if (
        !confirm(
          action === "approved" ? "Confirmar autorización" : "Confirmar rechazo"
        )
      )
        return;

      const cell = document.getElementById(`actions-${id}`);
      if (cell)
        cell.innerHTML =
          '<span class="text-xs text-slate-400 font-medium">Procesando...</span>';

      try {
        await updateIncidentStatus(id, action);
        // Feedback Visual (Sin recargar)
        if (cell) {
          const colorClass =
            action === "approved"
              ? "bg-emerald-50 text-emerald-700 border-emerald-200"
              : "bg-red-50 text-red-700 border-red-200";
          const dotClass =
            action === "approved" ? "bg-emerald-600" : "bg-red-600";
          const label = action === "approved" ? "Autorizado" : "Rechazado";

          cell.innerHTML = `
                  <div class="flex justify-end">
                      <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium border ${colorClass}">
                          <span class="w-1.5 h-1.5 rounded-full ${dotClass}"></span>
                          ${label}
                      </span>
                  </div>
              `;
        }
      } catch (e) {
        alert("Error de conexión con el servidor.");
        location.reload();
      }
    };
  </script>
</DashboardLayout>
