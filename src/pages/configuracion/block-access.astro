---
import Layout from "../../layouts/Layout.astro";
import Sidebar from "../../components/dashbord/Sidebar.astro";
import Topbar from "../../components/dashbord/Topbar.astro";
import "../../styles/dashbord.css";
---

<Layout title="Block Access - Configuración">
  <div class="dashboard-layout">
    <Sidebar />

    <div class="main-content">
      <Topbar />

      <div class="content-area">
        <div class="proyectos-container perfil-container">
          <div class="proyectos-header">
            <h1 class="page-title">Block Access</h1>
          </div>

          <div class="perfil-grid">
            <aside class="perfil-tabs">
              <nav>
                <a href="/configuracion" class="status-tab">Profile</a>
                <a href="/configuracion/teams" class="status-tab">Teams</a>
                <a href="/configuracion/reset-password" class="status-tab"
                  >Reset password</a
                >
                <a href="/configuracion/sign-as-user" class="status-tab"
                  >Sign As User</a
                >
                <a href="/configuracion/notification" class="status-tab"
                  >Notification</a
                >
                <a href="/configuracion/billing" class="status-tab">Billing</a>
                <a href="/configuracion/block-access" class="status-tab active"
                  >Block Access</a
                >
                <a href="/configuracion/delete-account" class="status-tab"
                  >Delete Account</a
                >
              </nav>
            </aside>

            <section class="perfil-main">
              <div class="sidebar-card">
                <h3 style="margin:0 0 16px;">Control de Acceso</h3>
                <div
                  style="padding:20px; background:#fef3c7; border-radius:8px; border:1px solid #f59e0b; margin-bottom:20px;"
                >
                  <div
                    style="font-weight:600; color:#92400e; margin-bottom:8px;"
                  >
                    ⚠ Advertencia
                  </div>
                  <div style="color:#92400e; font-size:0.9rem;">
                    Bloquear el acceso impedirá que este usuario inicie sesión
                    en el sistema.
                  </div>
                </div>
                <div style="display:flex; flex-direction:column; gap:16px;">
                  <label
                    style="display:flex; align-items:center; justify-content:space-between; padding:12px 0; border-bottom:1px solid var(--color-border);"
                  >
                    <div>
                      <div style="font-weight:500; margin-bottom:4px;">
                        Bloquear Acceso
                      </div>
                      <div
                        style="font-size:0.85rem; color:var(--color-text-secondary);"
                      >
                        El usuario no podrá iniciar sesión
                      </div>
                    </div>
                    <input
                      type="checkbox"
                      style="width:20px; height:20px; cursor:pointer;"
                    />
                  </label>
                  <label style="display:flex; flex-direction:column; gap:6px;">
                    <span style="font-size:0.9rem; font-weight:500;"
                      >Razón del Bloqueo (opcional)</span
                    >
                    <textarea
                      class="input-like"
                      style="padding:10px 12px; min-height:100px; resize:vertical;"
                      placeholder="Especifica la razón..."></textarea>
                  </label>
                  <button
                    class="btn-create-project"
                    style="align-self:flex-start; margin-top:8px;"
                  >
                    Guardar Cambios
                  </button>
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const currentPath = window.location.pathname;
      const navItems = document.querySelectorAll(".nav-item");
      navItems.forEach((item) => {
        item.classList.remove("active");
        const href = item.getAttribute("href");
        if (href && (currentPath === href || currentPath.startsWith(href)))
          item.classList.add("active");
      });
    });
  </script>
</Layout>
