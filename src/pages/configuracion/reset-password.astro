---
import Layout from "../../layouts/Layout.astro";
import Sidebar from "../../components/dashbord/Sidebar.astro";
import Topbar from "../../components/dashbord/Topbar.astro";
import "../../styles/dashbord.css";
---

<Layout title="Reset Password - Configuración">
  <div class="dashboard-layout">
    <Sidebar />

    <div class="main-content">
      <Topbar />

      <div class="content-area">
        <div class="proyectos-container perfil-container">
          <div class="proyectos-header">
            <h1 class="page-title">Reset Password</h1>
          </div>

          <div class="perfil-grid">
            <aside class="perfil-tabs">
              <nav>
                <a href="/configuracion" class="status-tab">Profile</a>
                <a href="/configuracion/teams" class="status-tab">Teams</a>
                <a
                  href="/configuracion/reset-password"
                  class="status-tab active">Reset password</a
                >
                <a href="/configuracion/sign-as-user" class="status-tab"
                  >Sign As User</a
                >
                <a href="/configuracion/notification" class="status-tab"
                  >Notification</a
                >
                <a href="/configuracion/billing" class="status-tab">Billing</a>
                <a href="/configuracion/block-access" class="status-tab"
                  >Block Access</a
                >
                <a href="/configuracion/delete-account" class="status-tab"
                  >Delete Account</a
                >
              </nav>
            </aside>

            <section class="perfil-main">
              <div class="sidebar-card">
                <h3 style="margin:0 0 16px;">Cambiar Contraseña</h3>
                <form
                  style="display:flex; flex-direction:column; gap:16px; max-width:500px;"
                >
                  <label style="display:flex; flex-direction:column; gap:6px;">
                    <span style="font-size:0.9rem; font-weight:500;"
                      >Contraseña Actual</span
                    >
                    <input
                      type="password"
                      class="input-like"
                      style="padding:10px 12px;"
                      placeholder="••••••••"
                    />
                  </label>
                  <label style="display:flex; flex-direction:column; gap:6px;">
                    <span style="font-size:0.9rem; font-weight:500;"
                      >Nueva Contraseña</span
                    >
                    <input
                      type="password"
                      class="input-like"
                      style="padding:10px 12px;"
                      placeholder="••••••••"
                    />
                  </label>
                  <label style="display:flex; flex-direction:column; gap:6px;">
                    <span style="font-size:0.9rem; font-weight:500;"
                      >Confirmar Nueva Contraseña</span
                    >
                    <input
                      type="password"
                      class="input-like"
                      style="padding:10px 12px;"
                      placeholder="••••••••"
                    />
                  </label>
                  <button
                    type="submit"
                    class="btn-create-project"
                    style="align-self:flex-start; margin:0;"
                  >
                    Actualizar Contraseña
                  </button>
                </form>
              </div>
            </section>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const currentPath = window.location.pathname;
      const navItems = document.querySelectorAll(".nav-item");
      navItems.forEach((item) => {
        item.classList.remove("active");
        const href = item.getAttribute("href");
        if (href && (currentPath === href || currentPath.startsWith(href)))
          item.classList.add("active");
      });
    });
  </script>
</Layout>
