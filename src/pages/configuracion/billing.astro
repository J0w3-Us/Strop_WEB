---
import Layout from "../../layouts/Layout.astro";
import Sidebar from "../../components/dashbord/Sidebar.astro";
import Topbar from "../../components/dashbord/Topbar.astro";
import "../../styles/dashbord.css";
---

<Layout title="Billing - Configuración">
  <div class="dashboard-layout">
    <Sidebar />

    <div class="main-content">
      <Topbar />

      <div class="content-area">
        <div class="proyectos-container perfil-container">
          <div class="proyectos-header">
            <h1 class="page-title">Billing</h1>
          </div>

          <div class="perfil-grid">
            <aside class="perfil-tabs">
              <nav>
                <a href="/configuracion" class="status-tab">Profile</a>
                <a href="/configuracion/teams" class="status-tab">Teams</a>
                <a href="/configuracion/reset-password" class="status-tab"
                  >Reset password</a
                >
                <a href="/configuracion/sign-as-user" class="status-tab"
                  >Sign As User</a
                >
                <a href="/configuracion/notification" class="status-tab"
                  >Notification</a
                >
                <a href="/configuracion/billing" class="status-tab active"
                  >Billing</a
                >
                <a href="/configuracion/block-access" class="status-tab"
                  >Block Access</a
                >
                <a href="/configuracion/delete-account" class="status-tab"
                  >Delete Account</a
                >
              </nav>
            </aside>

            <section class="perfil-main">
              <div class="sidebar-card" style="margin-bottom:16px;">
                <h3 style="margin:0 0 16px;">Plan Actual</h3>
                <div
                  style="display:flex; justify-content:space-between; align-items:center; padding:16px; background:var(--color-bg-light); border-radius:8px;"
                >
                  <div>
                    <div
                      style="font-size:1.25rem; font-weight:700; color:var(--color-primary);"
                    >
                      Plan Professional
                    </div>
                    <div
                      style="color:var(--color-text-secondary); margin-top:4px;"
                    >
                      $99/mes • Renovación automática
                    </div>
                  </div>
                  <button class="btn-action">Cambiar Plan</button>
                </div>
              </div>

              <div class="sidebar-card">
                <h3 style="margin:0 0 16px;">Historial de Pagos</h3>
                <div style="display:flex; flex-direction:column; gap:12px;">
                  {
                    [
                      {
                        fecha: "Nov 1, 2025",
                        monto: "$99.00",
                        estado: "Pagado",
                      },
                      {
                        fecha: "Oct 1, 2025",
                        monto: "$99.00",
                        estado: "Pagado",
                      },
                      {
                        fecha: "Sep 1, 2025",
                        monto: "$99.00",
                        estado: "Pagado",
                      },
                    ].map((pago) => (
                      <div style="display:flex; justify-content:space-between; align-items:center; padding:12px; border:1px solid var(--color-border); border-radius:8px;">
                        <div>
                          <div style="font-weight:500;">{pago.fecha}</div>
                          <div style="font-size:0.85rem; color:var(--color-text-secondary);">
                            Pago mensual
                          </div>
                        </div>
                        <div style="text-align:right;">
                          <div style="font-weight:700;">{pago.monto}</div>
                          <span class="badge badge-success">{pago.estado}</span>
                        </div>
                      </div>
                    ))
                  }
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const currentPath = window.location.pathname;
      const navItems = document.querySelectorAll(".nav-item");
      navItems.forEach((item) => {
        item.classList.remove("active");
        const href = item.getAttribute("href");
        if (href && (currentPath === href || currentPath.startsWith(href)))
          item.classList.add("active");
      });
    });
  </script>
</Layout>
