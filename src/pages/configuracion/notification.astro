---
import Layout from "../../layouts/Layout.astro";
import Sidebar from "../../components/dashbord/Sidebar.astro";
import Topbar from "../../components/dashbord/Topbar.astro";
import "../../styles/dashbord.css";
---

<Layout title="Notification - Configuración">
  <div class="dashboard-layout">
    <Sidebar />

    <div class="main-content">
      <Topbar />

      <div class="content-area">
        <div class="proyectos-container perfil-container">
          <div class="proyectos-header">
            <h1 class="page-title">Notification</h1>
          </div>

          <div class="perfil-grid">
            <aside class="perfil-tabs">
              <nav>
                <a href="/configuracion" class="status-tab">Profile</a>
                <a href="/configuracion/teams" class="status-tab">Teams</a>
                <a href="/configuracion/reset-password" class="status-tab"
                  >Reset password</a
                >
                <a href="/configuracion/sign-as-user" class="status-tab"
                  >Sign As User</a
                >
                <a href="/configuracion/notification" class="status-tab active"
                  >Notification</a
                >
                <a href="/configuracion/billing" class="status-tab">Billing</a>
                <a href="/configuracion/block-access" class="status-tab"
                  >Block Access</a
                >
                <a href="/configuracion/delete-account" class="status-tab"
                  >Delete Account</a
                >
              </nav>
            </aside>

            <section class="perfil-main">
              <div class="sidebar-card">
                <h3 style="margin:0 0 16px;">Preferencias de Notificación</h3>
                <div style="display:flex; flex-direction:column; gap:20px;">
                  <label
                    style="display:flex; align-items:center; justify-content:space-between; padding:12px 0; border-bottom:1px solid var(--color-border);"
                  >
                    <div>
                      <div style="font-weight:500; margin-bottom:4px;">
                        Email Notifications
                      </div>
                      <div
                        style="font-size:0.85rem; color:var(--color-text-secondary);"
                      >
                        Recibir notificaciones por email
                      </div>
                    </div>
                    <input
                      type="checkbox"
                      checked
                      style="width:20px; height:20px; cursor:pointer;"
                    />
                  </label>
                  <label
                    style="display:flex; align-items:center; justify-content:space-between; padding:12px 0; border-bottom:1px solid var(--color-border);"
                  >
                    <div>
                      <div style="font-weight:500; margin-bottom:4px;">
                        Push Notifications
                      </div>
                      <div
                        style="font-size:0.85rem; color:var(--color-text-secondary);"
                      >
                        Notificaciones en el navegador
                      </div>
                    </div>
                    <input
                      type="checkbox"
                      style="width:20px; height:20px; cursor:pointer;"
                    />
                  </label>
                  <label
                    style="display:flex; align-items:center; justify-content:space-between; padding:12px 0; border-bottom:1px solid var(--color-border);"
                  >
                    <div>
                      <div style="font-weight:500; margin-bottom:4px;">
                        Incident Alerts
                      </div>
                      <div
                        style="font-size:0.85rem; color:var(--color-text-secondary);"
                      >
                        Alertas de incidencias críticas
                      </div>
                    </div>
                    <input
                      type="checkbox"
                      checked
                      style="width:20px; height:20px; cursor:pointer;"
                    />
                  </label>
                  <label
                    style="display:flex; align-items:center; justify-content:space-between; padding:12px 0;"
                  >
                    <div>
                      <div style="font-weight:500; margin-bottom:4px;">
                        Weekly Summary
                      </div>
                      <div
                        style="font-size:0.85rem; color:var(--color-text-secondary);"
                      >
                        Resumen semanal por email
                      </div>
                    </div>
                    <input
                      type="checkbox"
                      checked
                      style="width:20px; height:20px; cursor:pointer;"
                    />
                  </label>
                  <button
                    class="btn-create-project"
                    style="align-self:flex-start; margin-top:8px;"
                  >
                    Guardar Preferencias
                  </button>
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const currentPath = window.location.pathname;
      const navItems = document.querySelectorAll(".nav-item");
      navItems.forEach((item) => {
        item.classList.remove("active");
        const href = item.getAttribute("href");
        if (href && (currentPath === href || currentPath.startsWith(href)))
          item.classList.add("active");
      });
    });
  </script>
</Layout>
