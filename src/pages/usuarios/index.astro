import ModalCrearUsuario from "../../components/dashbord/ModalCrearUsuario.astro";
import "../../styles/dashbord.css";

// Datos de ejemplo de usuarios
const usuarios = [
  {
    id: 1,
    nombre: "Carlos Rivera",
    email: "carlos.rivera@strop.com",
    estado: "Activo",
    role: "Administrador",
    telefono: "+34 611 223 344",
    avatar: "CR",
  },
  {
    id: 2,
    nombre: "Ana Torres",
    email: "ana.torres@strop.com",
    estado: "Activo",
    role: "Trabajador",
    telefono: "+34 655 443 322",
    avatar: "AT",
  },
  {
    id: 3,
    nombre: "Luis García",
    email: "luis.garcia@strop.com",
    estado: "Inactivo",
    role: "Trabajador",
    telefono: "+34 633 112 299",
    avatar: "LG",
  },
  {
    id: 4,
    nombre: "Javier Martín",
    email: "javier.martin@strop.com",
    estado: "Activo",
    role: "Trabajador",
    telefono: "+34 699 887 766",
    avatar: "JM",
  },
];

function statusClass(estado: string) {
  return estado === "Activo" ? "badge-success" : "badge";
}
---

<Layout title="Gestor de Usuarios - Strop">
  <div class="dashboard-layout">
    <Sidebar />

    <div class="main-content">
      <Topbar />

      <div class="content-area">
        <div class="proyectos-container usuarios-container">
          <!-- Header -->
          <div class="proyectos-header">
            <div class="header-left">
              <h1 class="page-title">Gestor de Usuarios</h1>
            </div>

            <div class="header-right">
              <div
                style="min-width: 360px; display:flex; gap:12px; align-items:center;"
              >
                <div class="search" style="flex:1;">
                  <input
                    id="searchInput"
                    placeholder="Buscar por nombre o email..."
                  />
                </div>

                <select id="roleSelect" class="filter-select">
                  <option value="">Todos los Roles</option>
                  <option value="Administrador">Administrador</option>
                  <option value="Trabajador">Trabajador</option>
                </select>

                <select id="statusSelect" class="filter-select">
                  <option value="">Todos los Estados</option>
                  <option value="Activo">Activo</option>
                  <option value="Inactivo">Inactivo</option>
                </select>
              </div>

              <button class="btn-create-project" id="createUserBtn">
                <svg
                  width="18"
                  height="18"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm5 11h-4v4h-2v-4H7v-2h4V7h2v4h4v2z"
                  ></path>
                </svg>
                Crear Usuario
              </button>
            </div>
          </div>

          <!-- Grid of user cards -->
          <div class="projects-grid" id="usersGrid" style="margin-top: 8px;">
            {
              usuarios.map((user) => (
                <div class="project-card user-card" data-user-id={user.id}>
                  <div class="card-header">
                    <div style="display:flex; align-items:center; gap:12px;">
                      <div
                        class="avatar"
                        style="width:64px; height:64px; font-size:18px;"
                      >
                        {user.avatar}
                      </div>
                      <div>
                        <h3 class="project-title" style="margin:0">
                          {user.nombre}
                        </h3>
                        <p class="project-type" style="margin:4px 0 0;">
                          {user.email}
                        </p>
                      </div>
                    </div>

                    <div>
                      <span
                        class={`badge ${user.estado === "Activo" ? "badge-success" : "badge"}`}
                      >
                        {user.estado}
                      </span>
                    </div>
                  </div>

                  <div class="card-content">
                    <div style="padding-top:8px; padding-bottom:8px; border-top:1px solid var(--color-border);">
                      <div style="color:var(--color-text-secondary); font-size:0.85rem;">
                        {user.role}
                      </div>
                      <div style="color:var(--color-text-secondary); font-size:0.9rem; margin-top:8px;">
                        {user.telefono}
                      </div>
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      // set active navigation (mark /usuarios and subpaths)
      const currentPath = window.location.pathname;
      const navItems = document.querySelectorAll(".nav-item");
      navItems.forEach((item) => {
        item.classList.remove("active");
        const href = item.getAttribute("href");
        if (href && (currentPath === href || currentPath.startsWith(href)))
          item.classList.add("active");
      });

      const search = document.getElementById(
        "searchInput"
      ) as HTMLInputElement | null;
      const roleSelect = document.getElementById(
        "roleSelect"
      ) as HTMLSelectElement | null;
      const statusSelect = document.getElementById(
        "statusSelect"
      ) as HTMLSelectElement | null;
      const usersGrid = document.getElementById(
        "usersGrid"
      ) as HTMLElement | null;

      if (!search || !usersGrid) return;

      function applyFilters() {
        const q = (search!.value || "").toLowerCase().trim();
        const role = roleSelect?.value || "";
        const status = statusSelect?.value || "";

        const cards = usersGrid!.querySelectorAll(".user-card");
        cards.forEach((card) => {
          const name = (
            card.querySelector(".project-title")?.textContent || ""
          ).toLowerCase();
          const mail = (
            card.querySelector(".project-type")?.textContent || ""
          ).toLowerCase();
          const roleText = (
            card.querySelector(".card-content div")?.textContent || ""
          ).toLowerCase();
          const badge = card.querySelector(".badge")?.textContent || "";

          let visible = true;

          if (q) {
            visible = name.includes(q) || mail.includes(q);
          }

          if (visible && role) {
            visible = roleText.includes(role.toLowerCase());
          }

          if (visible && status) {
            visible = badge.toLowerCase() === status.toLowerCase();
          }

          (card as HTMLElement).style.display = visible ? "" : "none";
        });
      }

      search.addEventListener("input", applyFilters);
      if (roleSelect) roleSelect.addEventListener("change", applyFilters);
      if (statusSelect) statusSelect.addEventListener("change", applyFilters);

      const createBtn = document.getElementById("createUserBtn");
      if (createBtn)
        createBtn.addEventListener("click", () => {
          window.openModal("modalCrearUsuario");
        });

      // Click on user card -> open profile (pass user id as query param)
      const userCards = usersGrid!.querySelectorAll(".user-card");
      userCards.forEach((card) => {
        card.addEventListener("click", function (this: HTMLElement) {
          const id = this.dataset.userId;
          if (id) window.location.href = `/usuarios/perfil?user=${id}`;
        });
      });
    });
  </script>

  <ModalCrearUsuario />
</Layout>
