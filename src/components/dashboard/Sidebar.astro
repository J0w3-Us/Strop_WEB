---
const currentPath = Astro.url.pathname;

const isActive = (path: string) => {
    return currentPath === path || currentPath.startsWith(path + "/");
};

// Mock data para el badge de Triage (en el futuro vendrá del store)
const triagePendingCount = 12;
---

<style>
    /* Estilos específicos del Sidebar */
    .badge-count {
        background: #ef4444;
        color: white;
        font-size: 0.65rem;
        font-weight: 700;
        padding: 2px 6px;
        border-radius: 6px;
        margin-left: auto;
        min-width: 20px;
        text-align: center;
    }

    .logout-button {
        width: 100%;
        border: none;
        background: none;
        cursor: pointer;
        color: #64748b;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        border-radius: 10px;
        font-size: 0.875rem;
        font-weight: 500;
        transition: all 0.2s;
    }

    .logout-button:hover {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

    .logout-button svg {
        width: 20px;
        height: 20px;
        color: #ef4444;
    }

    /* Logo clickeable para toggle */
    .brand-logo {
        cursor: pointer;
        user-select: none;
    }

    .brand-logo:hover .brand-icon {
        transform: scale(1.05);
    }

    .brand-icon {
        transition: transform 0.2s;
    }

    /* Tooltip para modo colapsado */
    .nav-item {
        position: relative;
    }

    .sidebar.collapsed .nav-item::after {
        content: attr(data-tooltip);
        position: absolute;
        left: 100%;
        top: 50%;
        transform: translateY(-50%);
        background: #1e293b;
        color: white;
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 500;
        white-space: nowrap;
        opacity: 0;
        pointer-events: none;
        transition:
            opacity 0.2s,
            left 0.2s;
        margin-left: 8px;
        z-index: 100;
    }

    .sidebar.collapsed .nav-item:hover::after {
        opacity: 1;
        left: calc(100% + 4px);
    }
</style>

<aside class="sidebar" id="app-sidebar">
    <div class="sidebar-header">
        <!-- Logo clickeable para toggle -->
        <div
            class="brand-logo"
            id="sidebar-toggle"
            role="button"
            aria-label="Toggle Sidebar"
            tabindex="0"
        >
            <div class="brand-icon">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <path d="M3 21h18"></path>
                    <path d="M5 21V7l8-4 8 4v14"></path>
                    <path d="M17 21v-8.86"></path>
                </svg>
            </div>
            <span class="brand-text">STROP</span>
        </div>
    </div>

    <nav class="sidebar-nav">
        <div class="nav-group-label">Principal</div>

        <a
            href="/dashboard"
            class={`nav-item ${isActive("/dashboard") ? "active" : ""}`}
            data-tooltip="Dashboard"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <rect x="3" y="3" width="7" height="7"></rect>
                <rect x="14" y="3" width="7" height="7"></rect>
                <rect x="14" y="14" width="7" height="7"></rect>
                <rect x="3" y="14" width="7" height="7"></rect>
            </svg>
            <span>Dashboard</span>
        </a>

        <div class="nav-group-label">Gestión</div>

        <a
            href="/proyectos"
            class={`nav-item ${isActive("/proyectos") ? "active" : ""}`}
            data-tooltip="Proyectos"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path d="M3 21h18"></path>
                <path d="M5 21V7l8-4 8 4v14"></path>
                <path d="M17 21v-8.86"></path>
            </svg>
            <span>Proyectos</span>
        </a>

        <a
            href="/incidencias"
            class={`nav-item ${isActive("/incidencias") ? "active" : ""}`}
            data-tooltip="Incidencias"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path
                    d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"
                ></path>
                <polyline points="14 2 14 8 20 8"></polyline>
            </svg>
            <span>Incidencias</span>
        </a>

        <div class="nav-group-label">Operativo</div>

        <a
            href="/triage"
            class={`nav-item ${isActive("/triage") ? "active" : ""}`}
            data-tooltip={`Triage (${triagePendingCount})`}
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                <path
                    d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"
                ></path>
            </svg>
            <span>Triage</span>
            {
                triagePendingCount > 0 && (
                    <span class="badge-count">{triagePendingCount}</span>
                )
            }
        </a>

        <a
            href="/bitacora"
            class={`nav-item ${isActive("/bitacora") ? "active" : ""}`}
            data-tooltip="Bitácora"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path d="M12 20h9"></path>
                <path
                    d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"
                ></path>
            </svg>
            <span>Bitácora</span>
        </a>
    </nav>

    <div
        style="padding: 1rem; margin-top: auto; border-top: 1px solid rgba(255,255,255,0.05);"
    >
        <button
            class="logout-button"
            onclick="document.cookie='sb-access-token=; path=/; max-age=0'; window.location.href='/login';"
            data-tooltip="Cerrar Sesión"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                <polyline points="16 17 21 12 16 7"></polyline>
                <line x1="21" y1="12" x2="9" y2="12"></line>
            </svg>
            <span>Cerrar Sesión</span>
        </button>
    </div>
</aside>

<script>
    const sidebar = document.getElementById("app-sidebar");
    const toggleBtn = document.getElementById("sidebar-toggle");

    if (sidebar && toggleBtn) {
        // Verificar si hay estado guardado
        const isCollapsed =
            localStorage.getItem("sidebar-collapsed") === "true";
        if (isCollapsed) {
            sidebar.classList.add("collapsed");
        }

        // Toggle al hacer click en el logo
        toggleBtn.addEventListener("click", () => {
            sidebar.classList.toggle("collapsed");
            // Guardar estado
            localStorage.setItem(
                "sidebar-collapsed",
                sidebar.classList.contains("collapsed").toString(),
            );
        });

        // También permitir toggle con teclado (Enter/Space)
        toggleBtn.addEventListener("keydown", (e) => {
            if (e.key === "Enter" || e.key === " ") {
                e.preventDefault();
                sidebar.classList.toggle("collapsed");
                localStorage.setItem(
                    "sidebar-collapsed",
                    sidebar.classList.contains("collapsed").toString(),
                );
            }
        });
    }
</script>
