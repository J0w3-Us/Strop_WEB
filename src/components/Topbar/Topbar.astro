---
// Topbar component — aligned with dashboard.css design system
// Uses classes: .topbar, .breadcrumbs, .topbar-actions, .icon-button, .user-profile, etc.

interface Props {
  title?: string;
  subtitle?: string;
}

const { title = "Dashboard", subtitle } = Astro.props;
const currentPath = Astro.url.pathname;

// Generate breadcrumb segments
const pathSegments = currentPath.split("/").filter(Boolean);
---

<header class="topbar">
  <div class="breadcrumbs">
    <a href="/dashboard" class="breadcrumb-link">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
        <polyline points="9 22 9 12 15 12 15 22"></polyline>
      </svg>
    </a>
    <span class="breadcrumb-separator">/</span>
    <span class="breadcrumb-current">{title}</span>
    {subtitle && <span class="breadcrumb-subtitle">· {subtitle}</span>}
  </div>

  <div class="topbar-actions">
    <!-- Search Button -->
    <button class="icon-button" aria-label="Buscar" title="Buscar (Ctrl+K)">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.3-4.3"></path>
      </svg>
    </button>

    <!-- Notifications Button -->
    <button
      class="icon-button"
      aria-label="Notificaciones"
      title="Notificaciones"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"></path>
        <path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"></path>
      </svg>
      <span class="notification-dot"></span>
    </button>

    <div class="divider-vertical"></div>

    <!-- User Profile -->
    <div
      class="user-profile"
      role="button"
      tabindex="0"
      aria-label="Menú de usuario"
    >
      <div class="user-info">
        <span class="user-name">Admin User</span>
        <span class="user-role">OWNER</span>
      </div>
      <div class="user-avatar">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
      </div>
      <svg
        class="chevron-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="m6 9 6 6 6-6"></path>
      </svg>
    </div>
  </div>
</header>

<style>
  /* Breadcrumb styles */
  .breadcrumbs {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
  }

  .breadcrumb-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 8px;
    color: #64748b;
    transition: all 0.2s;
  }

  .breadcrumb-link:hover {
    background: #f3f4f6;
    color: #1e293b;
  }

  .breadcrumb-separator {
    color: #cbd5e1;
    font-weight: 300;
  }

  .breadcrumb-current {
    font-weight: 600;
    color: #1e293b;
  }

  .breadcrumb-subtitle {
    color: #94a3b8;
    font-weight: 400;
  }
</style>
